<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finate | Job Portal - Candidat Details</title>
    
    <!-- custom css included -->
    <link rel="stylesheet" href="/css/notForHome.css">
    <link rel="stylesheet" href="/css/style.css">
    <!-- <link rel="stylesheet" href="/css/register.css"> -->


    <!-- bootstrap css included -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-eNp0OSW9qZlE5P2R1V1PJVlWr59Upv2Jz4pXTaUQx0FhFu4pGgF6GzDqrik3iX3l" crossorigin="anonymous"></script>


     <!-- fontAwesome inclued -->
     <script src="https://kit.fontawesome.com/9cebbb4b18.js" crossorigin="anonymous"></script>
     <style>
        .secondary-heading{
            color: red;
            font-size: 18px !important;
            font-weight: 700;
            color: #272a33 !important;
        }
        
     </style>
</head>
<body>
    <section class="hero-section ">
        <!--======== HeaderStart ======-->
        <%- include('./components/header.ejs') %>

        <!--====== Header END =====-->
        <hr class="mt-0 text-white " >
        <!-- =====BreadCrumb   start=====-->
        <div class="container breadcrumbs-container ">
                <div class="breadcrumb my-auto">
                    <h1 class=" hero-heading  ">Employer Details</h1>   
                    <p class="paragraph-text nav-item"><a href="/" class="">Home </a> <span class="active-page"> &nbsp; // Candidate Details</span></p>
                </div>          
        </div>
    </section>
    <section class="section pb-5">
        <div class="container">
            <!-- First row start -->
           <div class="job-detail-first-row p-5">
            <div class="row">
                <div class="col-lg-6 col-md-7 col-12  display-flex   job-detail-job-and-salary">
                    <div class="job-detail-company-logo my-auto">
                        <img src="/uploads/<%-employerFound.profileImage%>" alt="">
                    </div>
                    <div class="job-detail-info mx-4 my-auto">
                        <h3 class="section-heading job-detail-job my-1"><%- employerFound?.name %></h3>
                        <p class="job-detail-company-name my-1"><%- employerFound?.employerCategory %></p>
                        <p class="job-detail-company-address "><i class="fa-solid fa-location-dot"></i> <%- employerFound?.location %>&nbsp; <i class="fa-solid fa-phone"></i> <%- employerFound?.contactNo %></p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5 col-12  ">
                    <div class=" coutnter-container">
                        
                        <div class="job-count-container  ">
                           <div class="oks">
                            <h2 class="section-heading text-center "><%- myJobs.length%></h2> 
                            <p class="job-detail-company-name text-center ">Jobs</p>
                           </div>
                        </div>
                        <div class="job-count-container  ">
                           <div class="oks">
                            <h2 class="section-heading text-center ">34</h2> 
                            <p class="job-detail-company-name text-center ">Reviews</p>
                           </div>
                        </div>
                    </div>
                </div>
            </div>
           </div>
           <!-- second row start -->
           <div class="job-detail-second-row my-5">
            
                <div class="row">
                    <div class="col-lg-7 col-md-12 col-12">

                        <!-- about candidate -->
                        <div class="description ">
                            <h3 class="section-heading mt-2">About Employer</h3>

                            <p><%- employerFound?.about %>

                            </p>

                        </div>
                        <!-- Skills -->
                            <div class="col-lg-12">
                                <div class="software-skill">
                                <h3 class="section-heading mt-2"> Open Positions</h3>
                                <div class="row ">
                                    <% myJobs.forEach((job)=>{ %>
                                    <div class="col-lg-11 col-md-6 col-12 " >
                                        <div class="recent-job-item" style="background-color: var(--background-color);">
                                            <div class="company-info mb-3">
                                                <div class="clogo-container">
                                                    <img src="/uploads/<%-employerFound.profileImage%>" class="clogo"></img>
                                                </div>
                                                <div class="cname-and-caddress mx-4">
                                                    <a href="#" class="cname mb-0"><%-employerFound.name%></a>
                                                    <p class="caddress mb-0"><%-employerFound.location%></p>
                                                </div>
                                            </div>
                                            <div class="job">
                                                <a href="#" ><%-job.jobTitle%></a>
                                            </div>
                                            <p class="job-time"><%-job.jobTime%></p>
                                            <p class="required-skill"><%-job.requiredSkills%></p>
                                            <div class="salary-and-button">
                                                <p class="salary my-auto">Rs.<%-job.salary%><span style="font-size: 14px; color: var(--secondary-color); font-weight: 400;">/Monthly</span></p>
                                                <a href="#" class="apply-now-btn">Apply Now</a>
                                            </div>
                                        </div>
                                    </div>  
                                    <% }) %>         
                                </div>
                            </div>
                        </div>
                    </div>








                    <div class="col-lg-5 col-md-12 col-12 my-lg-5 my-sm-3">
                            <div class="side-boxes p-5 ">
                                <h3 class="section-heading">Information</h3>
                                <hr class="heading-underline  mb-4"><div class="">
                                <div class="container px-0">
                                        <div class="row">
                                        
                                            <!--  Category -->
                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Category   
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                <p >:&nbsp;&nbsp;&nbsp;&nbsp;<span id="category"><%-employerFound.employerCategory%></span></p>
                                            </div>
                                            <!--  Offered Salary -->
                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Email 
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                <p >:&nbsp;&nbsp;&nbsp;&nbsp;<span id="offered-salary"><%-employerFound.user.email%></span></p>
                                            </div>
                                            
                                            
                                            <!--  Experience -->
                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Website   
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                :&nbsp;&nbsp;&nbsp;&nbsp;<a href="<%-employerFound.website%>"><%-employerFound.website%></a>
                                            </div>
                                            
                                            <!--  Gender -->
                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Since   
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                <p >:&nbsp;&nbsp;&nbsp;&nbsp;<span id="gender"> 2008</span> </p>
                                            </div>

                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Location   
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                <p >:&nbsp;&nbsp;&nbsp;&nbsp;<span id="gender"> <%-employerFound.location%></span> </p>
                                            </div>

                                            <div class="col-6 col-lg-4 col-md-6">
                                                <p  class="text-black ">
                                                    Phone   
                                                </p>
                                            </div>
                                            <div class="col-6 col-lg-8 col-md-6">
                                                <p >:&nbsp;&nbsp;&nbsp;&nbsp;<span id="gender"> <%-employerFound.contactNo%></span> </p>
                                            </div>
                                            
                                            
                                        </div>
                                </div>
                            </div>
                        </div>
                            <div class="side-boxes p-5 mt-5 ">
                                <h3 class="section-heading">Get Connected</h3>
                                <hr class="heading-underline  mb-4">
                                <div class="container px-0">
                                    <div class="row">
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container ">
                                            <a href=""><i class="fa-brands fa-facebook"></i></a>
                                        </div>
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container">
                                            <a href=""><i class="fa-brands fa-twitter"></i></a>
                                        </div>
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container">
                                            <a href=""><i class="fa-brands fa-linkedin"></i></a>
                                        </div>
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container">
                                        <a href=""> <i class="fa-brands fa-instagram"></i></a>
                                        </div>
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container">
                                        <a href=""> <i class="fa-brands fa-skype"></i></a>
                                        </div>
                                        <div class="col-lg-2-col-md-2 col-2 side-box-icon-container">
                                        <a href=""> <i class="fa-brands fa-whatsapp"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer>
        
        <%- include("./components/footer.ejs") %>

</footer>
</body>
<script src="/js/index.js"></script>
</html>