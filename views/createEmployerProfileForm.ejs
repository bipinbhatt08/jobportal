<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finate | Job Portal - Post a job</title>
    <!-- Bootstrap JS -->

    <!-- custom css included -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/notForHome.css">
    <link rel="stylesheet" href="/css/register.css">
    <!-- bootstrap css included -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
     <!-- fontAwesome inclued -->
     <script src="https://kit.fontawesome.com/9cebbb4b18.js" crossorigin="anonymous"></script>
     
</head>
<body>
    <section class="hero-section ">
        <!--======== HeaderStart ======-->
        <%- include('./components/header.ejs') %>


        <!--====== Header END =====-->
        <hr class="mt-0 text-white " >
        <!-- =====BreadCrumb   start=====-->
        <div class="container breadcrumbs-container my5">
                <div class="breadcrumb my-auto">
                    <h1 class=" hero-heading  ">Post a job</h1>   
                    <p class="paragraph-text nav-item"><a href="/" class="">Home </a> <span class="active-page"> &nbsp;// Post a job</span></p>
                </div>          
        </div>
    </section>
    <section class="section">
        <div class="container">
           <div class="row">
            <div class="col-lg-12 col-md-12 col-12" >
                <h2>Employer Information Form</h2>

                <form action="/createProfile" method="POST" enctype="multipart/form-data">
                  <!-- Employer Name -->
                  <label for="name">Name:</label>
                  <input type="text" id="name" name="name" required><br>
              
                  <!-- Location -->
                  <label for="location">Location:</label>
                  <input type="text" id="location" name="location" required><br>
              
                  <!-- Employer Category -->
                  <label for="employerCategory">Employer Category:</label>
                  <select id="employerCategory" name="employerCategory" required>
                    <option value="category1">Category 1</option>
                    <option value="category2">Category 2</option>
                    <option value="category3">Category 3</option>
                    <!-- Add more options as needed -->
                  </select><br>
              
                  <!-- Contact Number -->
                  <label for="contactNo">Contact Number:</label>
                  <input type="tel" id="contactNo" name="contactNo" required><br>
              
                  <!-- Website -->
                  <label for="website">Website:</label>
                  <input type="url" id="website" name="website" required><br>
                  <!-- Profile -->
                  <label for="Profile">Profile Picture:</label>
                  <input type="file" id="profileImage" name="profileImage" required><br>
              
                  <!-- About -->
                  <label for="about">About:</label><br>
                  <textarea id="about" name="about" rows="4" cols="50" required></textarea><br>
              
                  <!-- Submit Button -->
                  <button type="submit">Submit</button>
                </form>
             </div>
            </div>
           </div>
        </div>
    </section>
    <%- include("./components/footer.ejs") %>
</body>
<script src="/js/index.js"></script>

</html>