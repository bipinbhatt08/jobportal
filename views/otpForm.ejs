<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finate | Job Portal - Verify Otp</title>
    <!-- Bootstrap JS -->

    <!-- custom css included -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/register.css">
    <!-- bootstrap css included -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
     <!-- fontAwesome inclued -->
     <script src="https://kit.fontawesome.com/9cebbb4b18.js" crossorigin="anonymous"></script>
     
</head>
<body>
    <section class="hero-section ">
        <!--======== HeaderStart ======-->
        <%- include('./components/header.ejs') %>


        <!--====== Header END =====-->
        <hr class="mt-0 text-white " >
        <!-- =====BreadCrumb   start=====-->
        <div class="container breadcrumbs-container my5">
                <div class="breadcrumb my-auto">
                    <h1 class=" hero-heading  ">Forgot Password</h1>   
                    <p class="paragraph-text nav-item"><a href="/" class="">Home </a> <span class="active-page"> &nbsp;// Verify Otp</span></p>
                </div>          
        </div>
    </section>
    <section class="section">
        <div class="container">
           <div class="row">
            <div class="col-lg-2 col-md-2 col-2"></div>
            <div class="col-lg-8 col-12">
                <div class="register-form-container ">
                    <h1 class="register-now text-center py-2">Verify OTp</h1>
                    <div class="line w-100 mb-4">
                        <div class="mid-line">
                        </div>
                    </div>
                    <form action="/otp/?email=<%-email%>" method="post" class="register-form " id="candidate-registration">
                        <input type="text" name="otp" id="" class="mb-3 w-100" placeholder="Otp">
                        <br>
                        <button type="submit" id="register-submit-btn" class="w-100  register-page-btn " > Send</button>
                    </form>
                </div>
            </div>
           </div>
        </div>
    </section>
    <%- include("./components/footer.ejs") %>
</body>
<script src="./index.js"></script>

</html>